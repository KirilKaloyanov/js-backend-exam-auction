<!-- Details Page -->
<section id="catalog-section">
  <h1 class="item">{{item.name}}
    {{#if user.isOwner}}
      <div class="f-right">
        <a
          class="action pad-small f-left"
          href="/catalog/edit/{{item._id}}"
        >Edit</a>
        <a
          class="action pad-small f-left"
          href="/catalog/delete/{{item._id}}"
        >Delete</a>
      </div>
    {{/if}}
  </h1>
  <div class="item padded">
    <div class="layout right large">
      <div class="col">
        <img src="{{item.imageUrl}}" class="img-large" />
      </div>

      <div class="content pad-med">
        <p>In category: <strong>{{item.category}}</strong></p>
        <p>
          {{item.description}}
        </p>

        <div class="align-center">
          <div>Current price: $<strong>{{item.price}}</strong></div>
          {{#if user.isOwner}}
            <div>
              <!-- If there is a bidder -->
              {{#if bidder}}
                Bid by
                <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>
                <!-- # Bonus: If there is a bidder -->
                <a
                  class="action pad-med cta"
                  href="/catalog/close/{{item._id}}"
                >Close Auction</a>
                <!-- If there are no bids -->
              {{else}}
                No bids
              {{/if}}
            </div>
          {{/if}}
          {{#if user.isVisitor}}
            {{#if user.subscribed}}
              <!-- If current user is the bidder -->
              <div>
                You are currently the
                <strong>highest bidder</strong>
                for this auction
              </div>
            {{else}}
              <!-- If current user can place a bid -->
              <form
                class="vertical"
                method="post"
                action="/catalog/subscribe/{{item._id}}"
              >
                <label><span>Bid amount</span><input
                    type="number"
                    name="bid"
                  /></label>
                <input class="action" type="submit" value="Place bid" />
              </form>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
    <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
  </div>
</section>
